BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            on_text: app.handle_calculations()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increments(1)
            Button:
                text: 'Down'
                on_press: app.handle_increments(-1)
    Button:
        text: 'Convert miles to kilometers'
        on_press: app.handle_calculations()
    Label:
        id: output_label



BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        TextInput:
            id: input_number
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    BoxLayout:
        orientation: "horizontal"
        Button:
            text: "Convert miles to kilometers"
            on_press: app.handle_conversion()
    BoxLayout:
        orientation: "horizontal"
        Label:
            id: output_label
